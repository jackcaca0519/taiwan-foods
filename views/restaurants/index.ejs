<% layout('layouts/template') %>
    <div id="cluster-map"></div>
    <h1>Index of Restaurants</h1>
    <% for(let rest of restaurants){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-lg-4">
                    <% if(rest.images.length){ %>
                        <img src="<%= rest.images[0].url %>" alt="" class="img-fluid">
                        <% }else{ %>
                            <img src="http://img.yao51.com/jiankangtuku/awhusrhx.jpeg" alt="" class="img-fluid">
                            <% } %>
                </div>
                <div class="col-lg-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= rest.title %>
                        </h5>
                        <p class="card-text">
                            <%= rest.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= rest.location %>
                            </small>
                        </p>
                        <a href="/restaurants/<%= rest.id %> " class="btn btn-secondary">
                            『<%= rest.title %>』詳細資訊頁面
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <script type="text/javascript">
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const rest = '<%- JSON.stringify(restaurants) %>';
                const restaurants = JSON.parse(rest);
            </script>

            <script src="/clusterMap.js"></script>