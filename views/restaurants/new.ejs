<% layout('layouts/template') %>
    <div class="alert alert-warning d-flex align-items-center invisible" role="alert" id="savingAlert"></div>
    <div class="row">
        <h1 class="text-center">新增餐廳</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/restaurants" method="post" novalidate class="to-be-validated" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">餐廳名:</label>
                    <input type="text" id="title" name='restaurant[title]' class="form-control" required>
                    <div class="valid-feedback">
                        看起來不錯！
                    </div>
                </div>
                <div class="mb-3">
                    <label for="Location" class="form-label">地址:</label>
                    <input type="text" id="Location" name="restaurant[location]" class="form-control" required>
                    <div class="valid-feedback">
                        看起來不錯！
                    </div>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">平均價位:</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" class="form-control" aria-label="price" id="price"
                            name="restaurant[avgPrice]" required>
                        <div class="valid-feedback">
                            看起來不錯！
                        </div>
                    </div>

                </div>
                <div class="mb-3">
                    <label for="descript" class="form-label">評論:</label>
                    <textarea type="text" id="descript" name="restaurant[description]" class="form-control"
                        required></textarea>
                </div>
                <div class="mb-3">
                    <label for="img" class="form-label">新增圖片:</label>
                    <input type="file" name="image" class="form-control" multiple id="img">
                </div>
                <div class="mb-3">
                    <button class="btn btn-success px-4" id="newRest">新增餐廳</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const newRest = document.querySelector('#newRest');
        newRest.addEventListener('click', () => {
            const savingAlert = document.querySelector('#savingAlert');
            savingAlert.classList.remove("invisible");
            savingAlert.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">< path d = "M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" /></svg ><div>創建餐廳中。。。請物跳出頁面。。。</div>'
        })
    </script>